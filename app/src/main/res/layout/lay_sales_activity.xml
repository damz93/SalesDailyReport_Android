<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/warna_lay"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_weight="5"
        android:scrollbars="vertical" >
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/btn_merah"
            android:columnCount="1" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/warna_lay"
                android:layout_marginBottom="10dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12pt"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:text="Form Sales Activity"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="6pt"
                    android:textColor="#FFFFFF"
                    android:layout_marginTop="10dp"
                    android:text="MSISDN MKIOS anda"/>
                <TextView
                    android:id="@+id/tx_msisdnmkios"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="8pt"
                    android:textColor="#FFFFFF"
                    android:layout_marginLeft="25dp"
                    android:textStyle="bold|italic"
                    android:text="Nomor MSISDN MKios"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="6pt"
                    android:textColor="#FFFFFF"
                    android:layout_marginTop="10dp"
                    android:text="Cluster"/>
                <TextView
                    android:id="@+id/tx_clustern"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="8pt"
                    android:textColor="#FFFFFF"
                    android:layout_marginLeft="25dp"
                    android:text="Nama Cluster"
                    android:textStyle="bold|italic"/>
                <TextView
                    android:id="@+id/tx_tap_gambar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="6pt"
                    android:textColor="#FFFFFF"
                    android:layout_marginTop="15dp"
                    android:visibility="invisible"
                    android:text="Tap gambar di bawah, untuk membuka kamera" />
                <ImageView
                    android:background="@drawable/kamera"
                    android:id="@+id/im_kamera"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:layout_width="80dp"
                    android:layout_height="65dp"/>
                <ImageView
                    android:id="@+id/im_kameraS"
                    android:layout_gravity="center"
                    android:layout_width="130dp"
                    android:layout_height="130dp"/>
                -->
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_marginTop="10dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/warna_lay"
                    android:layout_gravity="center"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="6pt"
                        android:textColor="#FFFFFF"
                        android:layout_marginTop="10dp"
                        android:text="Register MSISDN"/>

                    <Button
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/btn_silver"
                        android:layout_marginTop="10dp"
                        android:text="SCAN-QRCode"
                        android:textStyle="bold"
                        android:id="@+id/bt_qrcode1"
                        android:textColor="#FFFFFF"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="6pt"
                        android:textColor="#FFFFFF"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="10dp"
                        android:text="atau input "/>
                    <EditText
                        android:id="@+id/ed_msisdn_pl"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#FFFFFF"
                        android:textSize="20dp"
                        android:layout_marginLeft="10dp"
                        android:inputType="number"
                        android:hint="Tap 'Save' Setiap 1 MSISDN"/>
                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:orientation="horizontal">
                        <Button
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/btn_hijau"
                            android:textColor="#FFFFFF"
                            android:id="@+id/bt_split2"
                            android:text="Save"/>
                    </LinearLayout>
                    <TextView
                        android:id="@+id/tx_msisdn_plg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12pt"
                        android:textColor="#FFFFFF"
                        android:layout_marginLeft="25dp"
                        android:layout_marginTop="10dp"
                        android:text="08xxx"
                        android:textStyle="bold|italic"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="6pt"
                        android:textColor="#FFFFFF"
                        android:layout_marginTop="10dp"
                        android:text="Kegiatan"/>

                    <Spinner
                        android:id="@+id/spn_kunjungan"
                        android:layout_width="fill_parent"
                        android:layout_marginTop="10dp"
                        android:layout_height="45dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="10dp"
                        android:popupBackground="#cb1919"
                        android:background="#cb1919"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="6pt"
                        android:textColor="#FFFFFF"
                        android:layout_marginTop="10dp"
                        android:text="Data PJP"/>
                    <Spinner
                        android:id="@+id/spn_pjp"
                        android:layout_width="fill_parent"
                        android:layout_marginTop="10dp"
                        android:layout_height="45dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="10dp"
                        android:popupBackground="#cb1919"
                        android:background="#cb1919"/>
                    <EditText
                        android:id="@+id/ed_lokasi_pjp"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#FFFFFF"
                        android:textSize="20dp"
                        android:layout_marginLeft="10dp"
                        android:hint="Lokasi PJP"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="6pt"
                        android:textColor="#FFFFFF"
                        android:layout_marginTop="10dp"
                        android:text="Kartu yang terjual"/>
                    <TextView
                        android:id="@+id/tx_jml_msisd"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="8pt"
                        android:textColor="#FFFFFF"
                        android:layout_marginLeft="25dp"
                        android:textStyle="bold"
                        android:text="0" />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <Button
        android:id="@+id/bt_kr_request"
        android:background="@drawable/btn_hijau"
        android:textColor="#FFFFFF"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
            android:layout_gravity="bottom"
        android:text="Kirim Data"/>

</LinearLayout>