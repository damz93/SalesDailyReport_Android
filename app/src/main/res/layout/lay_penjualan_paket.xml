<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
	android:background="@drawable/warna_lay"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:layout_height="match_parent"
    android:orientation="vertical" >

<ScrollView
    android:id="@+id/scroll"
    android:layout_width="match_parent"
    android:layout_height="0sp"
    android:layout_weight="5"
    android:scrollbars="vertical" >
            	
	<LinearLayout
		android:layout_width="fill_parent"
		android:layout_height="match_parent"
		android:orientation="vertical">

		<TextView
	    	android:id="@+id/tx_5kk"
			android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:textColor="#FFFFFF"
        	android:text="MKios 5K" />
		<EditText
	    	android:id="@+id/ed_p5k"
        	android:layout_width="fill_parent"
        	android:layout_height="wrap_content"
        	android:inputType="number"
        	android:textColor="#FFFFFF"
			android:maxLength="5"
        	android:textSize="8pt"
        	android:hint="Ex:10" />
		<TextView
	    	android:id="@+id/tx_10kk"
			android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:textColor="#FFFFFF"
        	android:text="MKios 10K" />
		<EditText
	    	android:id="@+id/ed_p10k"
        	android:layout_width="fill_parent"
        	android:layout_height="wrap_content"
        	android:inputType="number"
			android:maxLength="5"
        	android:textColor="#FFFFFF"
        	android:textSize="8pt"
        	android:hint="Ex:10" />
		<TextView
	    	android:id="@+id/tx_20kk"
			android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:textColor="#FFFFFF"
        	android:text="MKios 20K" />
		<EditText
	    	android:id="@+id/ed_p20k"
        	android:layout_width="fill_parent"
        	android:layout_height="wrap_content"
        	android:inputType="number"
        	android:textColor="#FFFFFF"
			android:maxLength="5"
        	android:textSize="8pt"
        	android:hint="Ex:10" />
		<TextView
	    	android:id="@+id/tx_25kk"
			android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:textColor="#FFFFFF"
        	android:text="MKios 25K" />
		<EditText
	    			android:id="@+id/ed_p25k"
        			android:layout_width="fill_parent"
        			android:layout_height="wrap_content"
        			android:inputType="number"
        			android:textColor="#FFFFFF"
			android:maxLength="5"
        			android:textSize="20sp"
        			android:hint="Ex:10" />
				<TextView
	    			android:id="@+id/tx_50kk"
			        android:layout_width="wrap_content"
        			android:layout_height="wrap_content"        	
        			android:textColor="#FFFFFF"
        			android:text="MKios 50K" />
				<EditText	
	    			android:id="@+id/ed_p50k"
        			android:layout_width="fill_parent"
        			android:layout_height="wrap_content"
        			android:inputType="number"
					android:maxLength="5"
        			android:textColor="#FFFFFF"  
        			android:textSize="8pt"
        			android:hint="Ex:10" />
				<TextView
	    			android:id="@+id/tx_100kk"
			        android:layout_width="wrap_content"
        			android:layout_height="wrap_content"        	
        			android:textColor="#FFFFFF"
        			android:text="MKios 100K" />
				<EditText	
	    			android:id="@+id/ed_p100k"
        			android:layout_width="fill_parent"
        			android:layout_height="wrap_content"
        			android:inputType="number"
        			android:textColor="#FFFFFF"  
        			android:textSize="8pt"
					android:maxLength="5"
        			android:hint="Ex:10" />				
			</LinearLayout>
      </ScrollView>     
	 <Button
		android:id="@+id/bt_send"
		android:background="@drawable/btn_hijau"
		android:textColor="#FFFFFF"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_gravity="bottom"
		android:text="@string/next"
		android:textSize="20sp"/>
</LinearLayout>