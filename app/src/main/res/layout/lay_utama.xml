<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
	android:background="#de6a6a"
    android:orientation="vertical">
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
		android:background="#222225"
        android:orientation="horizontal">
        <ImageView 
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
			android:layout_marginLeft="4dp"
            android:layout_marginTop="2dp"
		    android:background="@drawable/ic_launcher"/>
		<LinearLayout
			android:layout_width="wrap_content"
			android:background="#222225"
			android:layout_height="wrap_content"
			android:layout_gravity="center_vertical"
			android:layout_marginLeft="5dp"
			android:orientation="vertical">
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textStyle="bold"
				android:textColor="#FFFFFF"
                android:layout_marginTop="2dp"
				android:textSize="18dp"
				android:text=" DYPTA - Dyandra PJP Tracking "/>
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textStyle="italic|bold"
				android:textColor="#bc6b6e"
				android:textSize="14dp"
				android:text="Youth and Commnity PAMASUKA"/>
		</LinearLayout>
	</LinearLayout>
	<LinearLayout
		android:layout_width="fill_parent"
        android:background="#d94e4e"
        android:layout_height="wrap_content"
		android:orientation="vertical" >
        <TextView
            android:id="@+id/txt_selamat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:textSize="12dp"
            android:textStyle="italic"
            android:layout_gravity="right"
            android:layout_marginTop="2dp"
            android:layout_marginRight="5dp"
            android:text="User Aktif"/>
	</LinearLayout>
	<ScrollView
		android:id="@+id/scroll"
		android:layout_width="match_parent"
		android:layout_height="0sp"
		android:layout_weight="5"
		android:scrollbars="vertical" >

		<LinearLayout
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical"
			android:layout_gravity="center_vertical"
			android:columnCount="1" >
	<LinearLayout 
	   	android:layout_width="fill_parent"
	   	android:layout_height="wrap_content"
	   	android:gravity="center_horizontal"
	   	android:orientation="horizontal">
		<Button
			android:id="@+id/btn_lihat_tugas"
			android:layout_width="110dp"
			android:layout_height="120dp"
			android:layout_marginRight="20dp"
			android:background="@drawable/view"/>
		<Button
			android:id="@+id/btn_d_outlet"
			android:layout_width="110dp"
			android:layout_height="120dp"
			android:layout_marginLeft="10dp"
			android:background="@drawable/outlet2"/>

	</LinearLayout>
	<LinearLayout
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="25dp"
		android:gravity="center_horizontal"
		android:orientation="horizontal">

		<Button
			android:id="@+id/btn_req_member"
			android:layout_width="110dp"
			android:layout_height="120dp"
			android:layout_marginRight="20dp"
			android:background="@drawable/req_member"/>
		<Button
			android:id="@+id/btn_pengaturan"
			android:layout_width="110dp"
			android:layout_height="120dp"
			android:layout_marginLeft="10dp"
			android:background="@drawable/setting"/>

	</LinearLayout>
            <!--
	<LinearLayout
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="15dp"
		android:gravity="center_horizontal"
		android:orientation="horizontal">
		<Button
			android:id="@+id/btn_keluar"
			android:layout_width="90dp"
			android:layout_height="100dp"
			android:layout_marginLeft="8dp"
			android:background="@drawable/logout2"/>
		<Button
			android:id="@+id/btn_sales_act"
			android:layout_width="90dp"
			android:layout_height="100dp"
			android:layout_marginRight="20dp"
			android:visibility="invisible"
			android:background="@drawable/sales_activity"/>
		</LinearLayout>
		-->
		</LinearLayout>
	</ScrollView>
	<LinearLayout
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
        android:background="#d94e4e"
        android:gravity="center_horizontal"
		android:orientation="horizontal">

        <Button
            android:layout_width="80dp"
            android:layout_height="25dp"
            android:layout_gravity="right"
            android:background="#c44646"
            android:id="@+id/bt_logoutdd"
            android:text="LOGOUT"
            android:textSize="7pt"
            android:layout_marginRight="3dp"
            android:textColor="#FFFFFF"
            android:textStyle="bold|italic"/>
	</LinearLayout>
</LinearLayout>
