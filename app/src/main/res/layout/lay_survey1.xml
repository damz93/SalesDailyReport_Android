<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#d94e4e"
    android:orientation="vertical" >
    <LinearLayout
        android:layout_width="match_parent"
        android:background="#222225"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:textSize="14pt"
            android:text=" Survey"/>
    </LinearLayout>

    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_weight="5"
        android:scrollbars="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:orientation="vertical"
            android:columnCount="1" >
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_merah"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10pt"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:text="Market Survey"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="6pt"
                    android:textColor="#FFFFFF"
                    android:layout_marginTop="15dp"
                    android:text="Nama Lokasi"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="8pt"
                    android:textColor="#FFFFFF"
                    android:text="Nama Lokasi"
                    android:textStyle="bold"
                    android:layout_marginLeft="25dp"
                    android:id="@+id/tx_lokasiz"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="6pt"
                    android:layout_marginTop="15dp"
                    android:textColor="#FFFFFF"
                    android:text="N P S N"/>
                <EditText
                    android:id="@+id/ed_npsn"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#FFFFFF"
                    android:textSize="8pt"
                    android:layout_marginLeft="25dp"
                    android:hint="NPSN" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="6pt"
                    android:textColor="#FFFFFF"
                    android:layout_marginTop="15dp"
                    android:text="Pengguna Telkomsel"/>
                <EditText
                    android:id="@+id/ed_pgn_telkomsel"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:textColor="#FFFFFF"
                    android:textSize="8pt"
                    android:layout_marginLeft="25dp"
                    android:hint="diisi dengan angka bukan persentase" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="6pt"
                    android:textColor="#FFFFFF"
                    android:layout_marginTop="15dp"
                    android:text="Pengguna Indosat"/>
                <EditText
                    android:id="@+id/ed_pgn_indosat"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:textColor="#FFFFFF"
                    android:textSize="8pt"
                    android:layout_marginLeft="25dp"
                    android:hint="diisi dengan angka bukan persentase" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="6pt"
                    android:textColor="#FFFFFF"
                    android:layout_marginTop="15dp"
                    android:text="Pengguna XL-Axiata"/>
                <EditText
                    android:id="@+id/ed_pgn_xl"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:textColor="#FFFFFF"
                    android:textSize="8pt"
                    android:layout_marginLeft="25dp"
                    android:hint="diisi dengan angka bukan persentase" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="6pt"
                    android:textColor="#FFFFFF"
                    android:layout_marginTop="15dp"
                    android:text="Pengguna Three"/>
                <EditText
                    android:id="@+id/ed_pgn_3"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:textColor="#FFFFFF"
                    android:textSize="8pt"
                    android:layout_marginLeft="25dp"
                    android:hint="diisi dengan angka bukan persentase" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="6pt"
                    android:textColor="#FFFFFF"
                    android:layout_marginTop="15dp"
                    android:text="Pengguna Smartfren"/>
                <EditText
                    android:id="@+id/ed_pgn_smartfren"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:textColor="#FFFFFF"
                    android:textSize="8pt"
                    android:layout_marginLeft="25dp"
                    android:hint="diisi dengan angka bukan persentase" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="6pt"
                    android:textColor="#FFFFFF"
                    android:layout_marginTop="15dp"
                    android:text="Pengguna Lain-lain"/>
                <EditText
                    android:id="@+id/ed_pgn_lain"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:textColor="#FFFFFF"
                    android:textSize="8pt"
                    android:layout_marginLeft="25dp"
                    android:hint="diisi dengan angka bukan persentase" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_merah"
                android:layout_marginTop="15dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10pt"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:text="Branding"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="6pt"
                    android:textColor="#FFFFFF"
                    android:layout_marginTop="15dp"
                    android:text="Lapangan Basket"/>
                <Spinner
                    android:id="@+id/spn_lapbas"
                    android:layout_width="fill_parent"
                    android:layout_marginTop="10dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:background="#FFFFFF"/>
                <EditText
                    android:id="@+id/ed_lain1"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#FFFFFF"
                    android:textSize="8pt"
                    android:layout_marginLeft="25dp"
                    android:focusable="false"
                    android:hint="Yang lain" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="6pt"
                    android:textColor="#FFFFFF"
                    android:layout_marginTop="15dp"
                    android:text="Mading"/>
                <Spinner
                    android:id="@+id/spn_mading"
                    android:layout_width="fill_parent"
                    android:layout_marginTop="10dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:background="#FFFFFF"/>
                <EditText
                    android:id="@+id/ed_lain2"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#FFFFFF"
                    android:textSize="8pt"
                    android:layout_marginLeft="25dp"
                    android:focusable="false"
                    android:hint="Yang lain" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="6pt"
                    android:textColor="#FFFFFF"
                    android:layout_marginTop="15dp"
                    android:text="Kantin"/>
                <Spinner
                    android:id="@+id/spn_kantin"
                    android:layout_width="fill_parent"
                    android:layout_marginTop="10dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:background="#FFFFFF"/>
                <EditText
                    android:id="@+id/ed_lain3"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#FFFFFF"
                    android:textSize="8pt"
                    android:layout_marginLeft="25dp"
                    android:focusable="false"
                    android:hint="Yang lain" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="6pt"
                    android:textColor="#FFFFFF"
                    android:layout_marginTop="15dp"
                    android:text="Wall Climbing"/>
                <Spinner
                    android:id="@+id/spn_wclimb"
                    android:layout_width="fill_parent"
                    android:layout_marginTop="10dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:background="#FFFFFF"/>
                <EditText
                    android:id="@+id/ed_lain4"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#FFFFFF"
                    android:textSize="8pt"
                    android:layout_marginLeft="25dp"
                    android:focusable="false"
                    android:hint="Yang lain" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="6pt"
                    android:textColor="#FFFFFF"
                    android:layout_marginTop="15dp"
                    android:text="Wall Painting"/>
                <Spinner
                    android:id="@+id/spn_wpaint"
                    android:layout_width="fill_parent"
                    android:layout_marginTop="10dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:background="#FFFFFF"/>
                <EditText
                    android:id="@+id/ed_lain5"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#FFFFFF"
                    android:textSize="8pt"
                    android:layout_marginLeft="25dp"
                    android:focusable="false"
                    android:hint="Yang lain" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_merah"
                android:layout_marginTop="15dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10pt"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:text="Informasi Tambahan"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="6pt"
                    android:textColor="#FFFFFF"
                    android:layout_marginTop="15dp"
                    android:text="Kondisi Network"/>
                <Spinner
                    android:id="@+id/spn_knds_nwork"
                    android:layout_width="fill_parent"
                    android:layout_marginTop="10dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:background="#FFFFFF"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="6pt"
                    android:textColor="#FFFFFF"
                    android:layout_marginTop="15dp"
                    android:text="Kondisi Sinyal"/>
                <Spinner
                    android:id="@+id/spn_knds_sinyal"
                    android:layout_width="fill_parent"
                    android:layout_marginTop="10dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:background="#FFFFFF"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="6pt"
                    android:textColor="#FFFFFF"
                    android:layout_marginTop="15dp"
                    android:text="Reseller Telkomsel"/>
                <Spinner
                    android:id="@+id/spn_reseller"
                    android:layout_width="fill_parent"
                    android:layout_marginTop="10dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:background="#FFFFFF"/>
                <EditText
                    android:id="@+id/ed_lain6"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#FFFFFF"
                    android:textSize="8pt"
                    android:layout_marginLeft="25dp"
                    android:focusable="false"
                    android:inputType="numberDecimal|textMultiLine"
                    android:hint="Pisahkan dengan tanda titik(.) dengan tanpa spasi" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="6pt"
                    android:textColor="#FFFFFF"
                    android:layout_marginTop="15dp"
                    android:text="Sisa Stok Perdana"/>
                <EditText
                    android:id="@+id/ed_jml_sch"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:textColor="#FFFFFF"
                    android:textSize="8pt"
                    android:layout_marginLeft="25dp"
                    android:hint="Sisa Stok Perdana" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_merah"
                android:layout_marginTop="15dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10pt"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:text="Program yang sedang Berlangsung"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="6pt"
                    android:textColor="#FFFFFF"
                    android:layout_marginTop="15dp"
                    android:text="Program Telkomsel yang sedang Berjalan"/>
                <EditText
                    android:id="@+id/ed_prg_telk"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#FFFFFF"
                    android:textSize="8pt"
                    android:inputType="textMultiLine"
                    android:layout_marginLeft="25dp"
                    android:hint="Kegiatan yang sedang dijalankan Telkomsel" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="6pt"
                    android:textColor="#FFFFFF"
                    android:layout_marginTop="15dp"
                    android:text="Program Kompetitor yang sedang Berjalan"/>
                <EditText
                    android:id="@+id/ed_prg_lain"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#FFFFFF"
                    android:textSize="8pt"
                    android:inputType="textMultiLine"
                    android:layout_marginLeft="25dp"
                    android:hint="Kegiatan yang sedang dijalankan Kompetitor" />
                </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <Button
        android:id="@+id/btn_simp_survey"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_clear"
        android:layout_alignParentLeft="true"
        android:background="@drawable/btn_hijau"
        android:text="Simpan"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:textSize="20sp" />
</LinearLayout>