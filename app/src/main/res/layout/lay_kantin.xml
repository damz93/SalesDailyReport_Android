<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#d94e4e"
    android:orientation="vertical" >
    <LinearLayout
        android:layout_width="match_parent"
        android:background="#222225"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:textSize="14pt"
            android:text=" Kantin/Koperasi"/>
    </LinearLayout>
    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_weight="5"
        android:scrollbars="vertical" >
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:columnCount="1" >
            <TextView
                android:id="@+id/txt_us_kan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:textSize="12dp"
                android:layout_gravity="right"
                android:textStyle="italic"
                android:layout_marginRight="5dp"
                android:text="User Aktif"/>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:background="@drawable/btn_merah"
                android:orientation="vertical">
                <TextView
                    android:layout_marginTop="6dp"
                    android:layout_width="190dp"
                    android:layout_height="wrap_content"
                    android:textSize="10pt"
                    android:textColor="#c4373c"
                    android:background="#FFFFFF"
                    android:textStyle="bold"
                    android:text=" Informasi Kantin"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="6pt"
                    android:textColor="#FFFFFF"
                    android:layout_marginTop="6dp"
                    android:text="ID Kantin"/>
                <TextView
                    android:id="@+id/tx_id_kantin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="8pt"
                    android:textColor="#FFFFFF"
                    android:layout_marginLeft="25dp"
                    android:textStyle="bold"
                    android:text="ID Kantin" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="6pt"
                    android:textColor="#FFFFFF"
                    android:layout_marginTop="10dp"
                    android:text="Nama Kantin"/>
                <TextView
                    android:id="@+id/tx_nama_kantin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="8pt"
                    android:textColor="#FFFFFF"
                    android:layout_marginLeft="25dp"
                    android:textStyle="bold"
                    android:text="Nama Kantin" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="6pt"
                    android:textColor="#FFFFFF"
                    android:layout_marginTop="10dp"
                    android:text="Nama Pemilik/Frontliner"/>
                <TextView
                    android:id="@+id/tx_nama_pemilik"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="8pt"
                    android:textColor="#FFFFFF"
                    android:layout_marginLeft="25dp"
                    android:textStyle="bold"
                    android:text="Nama Pemilik/Frontliner" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="6pt"
                    android:textColor="#FFFFFF"
                    android:layout_marginTop="10dp"
                    android:text="Nomor Handphone"/>
                <TextView
                    android:id="@+id/tx_no_hanphone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="8pt"
                    android:textColor="#FFFFFF"
                    android:layout_marginLeft="25dp"
                    android:textStyle="bold"
                    android:text="Nomor Handphone" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="6pt"
                    android:textColor="#FFFFFF"
                    android:layout_marginTop="10dp"
                    android:text="Nomor MKios"/>
                <TextView
                    android:id="@+id/tx_no_mkios"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="8pt"
                    android:textColor="#FFFFFF"
                    android:layout_marginLeft="25dp"
                    android:textStyle="bold"
                    android:text="Nomor MKios" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/btn_merah"
                android:layout_marginBottom="10dp"
                android:orientation="vertical">
                <TextView
                    android:layout_marginTop="6dp"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:textSize="10pt"
                    android:textColor="#c4373c"
                    android:background="#FFFFFF"
                    android:textStyle="bold"
                    android:text=" Jumlah Perdana"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="6pt"
                    android:textColor="#FFFFFF"
                    android:layout_marginTop="6dp"
                    android:text="Telkomsel"/>
                <EditText
                    android:id="@+id/ed_jumperd_telkomsel"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#FFFFFF"
                    android:textColorHint="#fdb2b2"
                    android:textSize="8pt"
                    android:text="0"
                    android:inputType="number"
                    android:layout_marginLeft="25dp"
                    android:hint="Telkomsel" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="6pt"
                    android:textColor="#FFFFFF"
                    android:layout_marginTop="6dp"
                    android:text="Indosat"/>
                <EditText
                    android:id="@+id/ed_jumperd_indosat"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#FFFFFF"
                    android:text="0"
                    android:textColorHint="#fdb2b2"
                    android:textSize="8pt"
                    android:inputType="number"
                    android:layout_marginLeft="25dp"
                    android:hint="Indosat" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="6pt"
                    android:textColor="#FFFFFF"
                    android:layout_marginTop="6dp"
                    android:text="XL"/>
                <EditText
                    android:id="@+id/ed_jumperd_XL"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#FFFFFF"
                    android:textColorHint="#fdb2b2"
                    android:text="0"
                    android:textSize="8pt"
                    android:inputType="number"
                    android:layout_marginLeft="25dp"
                    android:hint="XL" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="6pt"
                    android:textColor="#FFFFFF"
                    android:layout_marginTop="6dp"
                    android:text="Three"/>
                <EditText
                    android:id="@+id/ed_jumperd_three"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#FFFFFF"
                    android:textColorHint="#fdb2b2"
                    android:textSize="8pt"
                    android:text="0"
                    android:inputType="number"
                    android:layout_marginLeft="25dp"
                    android:hint="Three" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="6pt"
                    android:textColor="#FFFFFF"
                    android:layout_marginTop="6dp"
                    android:text="Other"/>
                <EditText
                    android:id="@+id/ed_jumperd_other"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#FFFFFF"
                    android:textColorHint="#fdb2b2"
                    android:textSize="8pt"
                    android:text="0"
                    android:inputType="number"
                    android:layout_marginLeft="25dp"
                    android:hint="Other" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_merah"
                android:layout_marginBottom="10dp"
                android:orientation="vertical">
                <TextView
                    android:layout_marginTop="6dp"
                    android:layout_width="265dp"
                    android:layout_height="wrap_content"
                    android:textSize="10pt"
                    android:textColor="#c4373c"
                    android:background="#FFFFFF"
                    android:textStyle="bold"
                    android:text=" Jumlah Penjualan Pulsa"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="6pt"
                    android:textColor="#FFFFFF"
                    android:layout_marginTop="6dp"
                    android:text="Telkomsel"/>
                <EditText
                    android:id="@+id/ed_jumpenj_telkomsel"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#FFFFFF"
                    android:text="0"
                    android:textColorHint="#fdb2b2"
                    android:textSize="8pt"
                    android:inputType="number"
                    android:layout_marginLeft="25dp"
                    android:hint="Telkomsel" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="6pt"
                    android:textColor="#FFFFFF"
                    android:layout_marginTop="6dp"
                    android:text="Indosat"/>
                <EditText
                    android:id="@+id/ed_jumpenj_indosat"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#FFFFFF"
                    android:textColorHint="#fdb2b2"
                    android:text="0"
                    android:textSize="8pt"
                    android:inputType="number"
                    android:layout_marginLeft="25dp"
                    android:hint="Indosat" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="6pt"
                    android:textColor="#FFFFFF"
                    android:layout_marginTop="6dp"
                    android:text="XL"/>
                <EditText
                    android:id="@+id/ed_jumpenj_xl"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#FFFFFF"
                    android:textColorHint="#fdb2b2"
                    android:text="0"
                    android:textSize="8pt"
                    android:inputType="number"
                    android:layout_marginLeft="25dp"
                    android:hint="XL" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="6pt"
                    android:textColor="#FFFFFF"
                    android:layout_marginTop="6dp"
                    android:text="Three"/>
                <EditText
                    android:id="@+id/ed_jumpenj_three"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#FFFFFF"
                    android:textColorHint="#fdb2b2"
                    android:textSize="8pt"
                    android:inputType="number"
                    android:text="0"
                    android:layout_marginLeft="25dp"
                    android:hint="Three" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="6pt"
                    android:textColor="#FFFFFF"
                    android:layout_marginTop="6dp"
                    android:text="Other"/>
                <EditText
                    android:id="@+id/ed_jumpenj_other"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#FFFFFF"
                    android:textColorHint="#fdb2b2"
                    android:text="0"
                    android:textSize="8pt"
                    android:inputType="number"
                    android:layout_marginLeft="25dp"
                    android:hint="Other" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_merah"
                android:layout_marginBottom="10dp"
                android:orientation="vertical">
                <TextView
                    android:layout_marginTop="6dp"
                    android:layout_width="320dp"
                    android:layout_height="wrap_content"
                    android:textSize="10pt"
                    android:textColor="#c4373c"
                    android:background="#FFFFFF"
                    android:textStyle="bold"
                    android:text=" Jumlah Penjualan Paket Data"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="6pt"
                    android:textColor="#FFFFFF"
                    android:layout_marginTop="6dp"
                    android:text="Telkomsel"/>
                <EditText
                    android:id="@+id/ed_jumpenjdata_telkomsel"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="#FFFFFF"
                    android:textColorHint="#fdb2b2"
                    android:textSize="8pt"
                    android:inputType="number"
                    android:layout_marginLeft="25dp"
                    android:hint="Telkomsel" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="6pt"
                    android:textColor="#FFFFFF"
                    android:layout_marginTop="6dp"
                    android:text="Indosat"/>
                <EditText
                    android:id="@+id/ed_jumpenjdata_indosat"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#FFFFFF"
                    android:textColorHint="#fdb2b2"
                    android:textSize="8pt"
                    android:inputType="number"
                    android:layout_marginLeft="25dp"
                    android:text="0"
                    android:hint="Indosat" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="6pt"
                    android:textColor="#FFFFFF"
                    android:layout_marginTop="6dp"
                    android:text="XL"/>
                <EditText
                    android:id="@+id/ed_jumpenjdata_xl"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#FFFFFF"
                    android:textColorHint="#fdb2b2"
                    android:text="0"
                    android:textSize="8pt"
                    android:inputType="number"
                    android:layout_marginLeft="25dp"
                    android:hint="XL" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="6pt"
                    android:textColor="#FFFFFF"
                    android:layout_marginTop="6dp"
                    android:text="Three"/>
                <EditText
                    android:id="@+id/ed_jumpenjdata_three"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#FFFFFF"
                    android:textColorHint="#fdb2b2"
                    android:text="0"
                    android:textSize="8pt"
                    android:inputType="number"
                    android:layout_marginLeft="25dp"
                    android:hint="Three" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="6pt"
                    android:textColor="#FFFFFF"
                    android:layout_marginTop="6dp"
                    android:text="Other"/>
                <EditText
                    android:id="@+id/ed_jumpenjdata_other"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#FFFFFF"
                    android:textColorHint="#fdb2b2"
                    android:text="0"
                    android:textSize="8pt"
                    android:inputType="number"
                    android:layout_marginLeft="25dp"
                    android:hint="Other" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <Button
        android:id="@+id/bt_kr_kantin"
        android:background="@drawable/btn_hijau"
        android:textColor="#FFFFFF"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_gravity="bottom"
        android:text="Kirim Data"/>
</LinearLayout>