<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#d94e4e"
    android:orientation="vertical" >
    <LinearLayout
        android:layout_width="match_parent"
        android:background="#222225"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:textSize="14pt"
            android:text=" Outlet Youth"/>
    </LinearLayout>
    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_weight="5"
        android:scrollbars="vertical" >
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:orientation="vertical"
            android:columnCount="1" >
            <TextView
                android:id="@+id/txt_us2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:textSize="12dp"
                android:layout_gravity="right"
                android:textStyle="italic"
                android:layout_marginRight="5dp"
                android:text="User Aktif"/>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_merah"
                android:orientation="vertical">
                    <TextView
                        android:layout_marginTop="6dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="10pt"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold"
                        android:text="Detail Outlet Youth"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="6pt"
                        android:textColor="#FFFFFF"
                        android:layout_marginTop="10dp"
                        android:text="Nama Outlet"/>

                    <AutoCompleteTextView
                        android:id="@+id/ed_nm_outl"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#FFFFFF"
                        android:textSize="8pt"
                        android:popupBackground="@drawable/btn_merah"
                        android:layout_marginTop="10dp"
                        android:scrollbarSize="30dp"
                        android:ems="15"
                        android:hint="Nama Outlet harus ditulis dengan benar" />

                    <Button
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/btn_silver"
                        android:text="SCAN-QRCode"
                        android:textStyle="bold"
                        android:id="@+id/bt_qrcode"
                        android:layout_marginTop="10dp"
                        android:textColor="#FFFFFF"/>
                <!--     <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:textSize="6pt"
                       android:textColor="#FFFFFF"
                       android:layout_marginTop="10dp"
                       android:text="Input MSISDN"/>
             <LinearLayout
                   android:layout_width="fill_parent"
                   android:layout_height="wrap_content"
                   android:background="@drawable/warna_lay"
                   android:layout_gravity="center"
                   android:orientation="vertical">
                   <EditText
                       android:id="@+id/ed_inpt_msisdn"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:textColor="#FFFFFF"
                       android:textSize="20dp"
                       android:layout_marginLeft="10dp"
                       android:hint="(pisahkan dengan tanda koma)"
                       android:inputType="textMultiLine|number" />
                   <Button
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_marginLeft="10dp"
                       android:background="@drawable/btn_hijau"
                       android:textColor="#FFFFFF"
                       android:id="@+id/bt_split"
                       android:text="Split"/>
                   </LinearLayout>-->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="6pt"
                        android:textColor="#FFFFFF"
                        android:layout_marginTop="10dp"
                        android:text="Data MSISDN"/>
                    <TextView
                        android:id="@+id/tx_msisdn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="8pt"
                        android:textColor="#FFFFFF"
                        android:layout_marginLeft="25dp"
                        android:textStyle="bold"
                        android:text="08XXXXXX" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="6pt"
                        android:textColor="#FFFFFF"
                        android:layout_marginTop="10dp"
                        android:text="Jumlah MSISDN"/>
                    <TextView
                        android:id="@+id/tx_jml_msd"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="8pt"
                        android:textColor="#FFFFFF"
                        android:layout_marginLeft="25dp"
                        android:textStyle="bold"
                        android:text="0" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="6pt"
                        android:textColor="#FFFFFF"
                        android:layout_marginTop="10dp"
                        android:text="Metode Pembayaran"/>
                    <RadioGroup
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:orientation="horizontal">
                        <RadioButton android:id="@+id/rdi_cash"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#FFFFFF"
                            android:text="Cash"
                            android:onClick="onRadioButtonClicked"/>
                        <RadioButton android:id="@+id/rdi_konsinyasi"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#FFFFFF"
                            android:text="Konsinyasi"
                            android:onClick="onRadioButtonClicked"/>
                    </RadioGroup>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="6pt"
                        android:textColor="#FFFFFF"
                        android:layout_marginTop="10dp"
                        android:text="Keterangan"/>

                    <EditText
                        android:id="@+id/ed_ktr_otl"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#FFFFFF"
                        android:textSize="8pt"
                        android:layout_marginLeft="10dp"
                        android:hint="Tambahkan Keterangan, jika dianggap perlu"
                        android:inputType="textMultiLine"/>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <Button
        android:id="@+id/bt_kr_outl"
        android:background="@drawable/btn_hijau"
        android:textColor="#FFFFFF"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_gravity="bottom"
        android:text="Kirim Data"/>
</LinearLayout>