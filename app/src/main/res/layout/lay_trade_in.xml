<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/warna_lay"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_weight="5"
        android:scrollbars="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:background="@drawable/btn_merah"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10pt"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:text="Trade IN"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10pt"
                android:textColor="#FFFFFF"
                android:text="XL-Axiata" />
            <EditText
                android:id="@+id/ed_th_xl"
                android:layout_width="fill_parent"
                android:inputType="number"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:textSize="8pt"
                android:maxLength="5"
                android:hint="XL-Axiata" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:text="Three" />
            <EditText
                android:id="@+id/ed_th3"
                android:maxLength="5"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:textColor="#FFFFFF"
                android:textSize="8pt"
                android:hint="Three" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:text="Indosat" />
            <EditText
                android:id="@+id/ed_thisat"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:inputType="number"
                android:maxLength="5"
                android:textSize="8pt"
                android:hint="Indosat" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:text="Smartfren" />
            <EditText
                android:id="@+id/ed_thsmart"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:textColor="#FFFFFF"
                android:maxLength="5"
                android:textSize="8pt"
                android:hint="Smartfren" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:text="Yang lain" />
            <EditText
                android:id="@+id/ed_thyalain"
                android:layout_width="fill_parent"
                android:inputType="number"
                android:layout_height="wrap_content"
                android:maxLength="5"
                android:textColor="#FFFFFF"
                android:textSize="8pt"
                android:hint="Yang Lain" />

         </LinearLayout>
    </ScrollView>
    <Button
        android:id="@+id/bt_sendth"
        android:background="@drawable/btn_hijau"
        android:textColor="#FFFFFF"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:text="@string/send"
        android:textSize="20sp"/>
</LinearLayout>