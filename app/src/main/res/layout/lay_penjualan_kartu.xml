<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
	android:background="@drawable/warna_lay"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:layout_height="match_parent"
    android:orientation="vertical" >

<ScrollView
    android:id="@+id/scroll"
    android:layout_width="match_parent"
    android:layout_height="0sp"
    android:layout_weight="5"
    android:scrollbars="vertical" >
	<LinearLayout
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		android:columnCount="1" >
		<LinearLayout
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:background="@drawable/btn_merah"
			android:layout_marginTop="15dp"
			android:orientation="vertical">
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textSize="10pt"
				android:textColor="#FFFFFF"
				android:textStyle="bold"
				android:text="Penjualan Kartu"/>
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textSize="6pt"
				android:textColor="#FFFFFF"
				android:layout_marginTop="10dp"
				android:text="Perdana simPATI"/>

			<Button
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:background="@drawable/btn_silver"
				android:layout_marginTop="10dp"
				android:text="SCAN-QRCode"
				android:textStyle="bold"
				android:id="@+id/bt_qrcode_simpati"
				android:textColor="#FFFFFF"/>
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textSize="6pt"
				android:textColor="#FFFFFF"
				android:layout_marginTop="10dp"
				android:layout_marginLeft="10dp"
				android:text="atau input "/>

			<LinearLayout
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginTop="5dp"
				android:layout_marginLeft="10dp"
				android:gravity="left"
				android:orientation="horizontal">
				<AutoCompleteTextView
					android:id="@+id/act_msisdn_simp"
					android:layout_width="200dp"
					android:textSize="16sp"
					android:textColorHint="#bab3a7"
					android:popupBackground="#cb1919"
					android:layout_marginLeft="10dp"
					android:scrollbarSize="30dp"
					android:ems="15"
					android:layout_height="wrap_content"
					android:textColor="#FFFFFF"
					android:inputType="number"
					android:hint="Tap 'Split' Setiap 1 MSISDN"/>
				<Button
					android:layout_width="60dp"
					android:layout_height="wrap_content"
					android:textColor="#FFFFFF"
					android:background="@drawable/btn_kuning"
					android:layout_marginRight="2dp"
					android:id="@+id/btn_split_simp"
					android:text="Split"/>


				</LinearLayout>
			<LinearLayout
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="10dp"
				android:gravity="center"
				android:orientation="horizontal">
				<Button
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:background="@drawable/btn_hijau"
					android:textColor="#FFFFFF"
					android:id="@+id/bt_savesimpati"
					android:text="Save"/>

			</LinearLayout>
			<TextView
				android:id="@+id/tx_msisdnsimpati"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:maxLength="12"
				android:layout_marginLeft="10dp"
				android:layout_marginTop="10dp"
				android:textColor="#FFFFFF"
				android:textSize="20sp"
				android:textStyle="bold"
				android:text="08xxx"/>
			<TextView
				android:id="@+id/ed_simpati"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:maxLength="5"
				android:layout_marginLeft="10dp"
				android:layout_marginTop="10dp"
				android:textColor="#FFFFFF"
				android:textSize="20sp"
				android:textStyle="bold"
				android:text="0"/>
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textSize="6pt"
				android:textColor="#FFFFFF"
				android:layout_marginTop="10dp"
				android:text="Perdana AS"/>

			<Button
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:background="@drawable/btn_silver"
				android:layout_marginTop="10dp"
				android:text="SCAN-QRCode"
				android:textStyle="bold"
				android:id="@+id/bt_qrcode_as"
				android:textColor="#FFFFFF"/>
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textSize="6pt"
				android:textColor="#FFFFFF"
				android:layout_marginTop="10dp"
				android:layout_marginLeft="10dp"
				android:text="atau input "/>

			<AutoCompleteTextView
				android:id="@+id/act_msisdn_as"
				android:layout_width="fill_parent"
				android:textSize="16sp"
				android:textColorHint="#bab3a7"
				android:popupBackground="#cb1919"
				android:layout_marginTop="5dp"
				android:layout_marginLeft="10dp"
				android:scrollbarSize="30dp"
				android:ems="15"
				android:layout_height="wrap_content"
				android:textColor="#FFFFFF"
				android:inputType="number"
				android:hint="Tap 'Save' Setiap 1 MSISDN"/>

			<LinearLayout
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="10dp"
				android:gravity="center"
				android:orientation="horizontal">
				<Button
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:background="@drawable/btn_hijau"
					android:textColor="#FFFFFF"
					android:id="@+id/bt_saveas"
					android:text="Save"/>
			</LinearLayout>

			<TextView
				android:id="@+id/tx_msisdnas"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:maxLength="12"
				android:layout_marginLeft="10dp"
				android:layout_marginTop="10dp"
				android:textColor="#FFFFFF"
				android:textSize="20sp"
				android:textStyle="bold"
				android:text="08xxx"/>
			<TextView
	    			android:id="@+id/ed_as"
        			android:layout_width="fill_parent"
        			android:layout_height="wrap_content"
					android:maxLength="5"
					android:layout_marginLeft="10dp"
					android:layout_marginTop="10dp"
        			android:textColor="#FFFFFF"  
        			android:textSize="20sp"
        			android:textStyle="bold"
					android:text="0"/>





			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textSize="6pt"
				android:textColor="#FFFFFF"
				android:layout_marginTop="10dp"
				android:text="Perdana LOOP"/>

			<Button
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:background="@drawable/btn_silver"
				android:layout_marginTop="10dp"
				android:text="SCAN-QRCode"
				android:textStyle="bold"
				android:id="@+id/bt_qrcode_loop"
				android:textColor="#FFFFFF"/>
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textSize="6pt"
				android:textColor="#FFFFFF"
				android:layout_marginTop="10dp"
				android:layout_marginLeft="10dp"
				android:text="atau input "/>

			<AutoCompleteTextView
				android:id="@+id/act_msisdn_loop"
				android:layout_width="fill_parent"
				android:textSize="16sp"
				android:textColorHint="#bab3a7"
				android:popupBackground="#cb1919"
				android:layout_marginTop="5dp"
				android:layout_marginLeft="10dp"
				android:scrollbarSize="30dp"
				android:ems="15"
				android:layout_height="wrap_content"
				android:textColor="#FFFFFF"
				android:inputType="number"
				android:hint="Tap 'Save' Setiap 1 MSISDN"/>

			<LinearLayout
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="10dp"
				android:gravity="center"
				android:orientation="horizontal">
				<Button
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:background="@drawable/btn_hijau"
					android:textColor="#FFFFFF"
					android:id="@+id/bt_saveloop"
					android:text="Save"/>
			</LinearLayout>

			<TextView
				android:id="@+id/tx_msisdnloop"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:maxLength="12"
				android:layout_marginLeft="10dp"
				android:layout_marginTop="10dp"
				android:textColor="#FFFFFF"
				android:textSize="20sp"
				android:textStyle="bold"
				android:text="08xxx"/>
			<TextView
				android:id="@+id/ed_loop"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:maxLength="5"
				android:layout_marginLeft="10dp"
				android:layout_marginTop="10dp"
				android:textColor="#FFFFFF"
				android:textSize="20sp"
				android:textStyle="bold"
				android:text="0"/>


				</LinearLayout>
			<LinearLayout
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:background="@drawable/btn_merah"
				android:layout_marginTop="15dp"
				android:layout_marginBottom="15dp"
				android:orientation="vertical">
				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textSize="12pt"
					android:textColor="#FFFFFF"
					android:textStyle="bold"
					android:text="Aktivasi Paket"/>
				<TextView
					android:id="@+id/tx_maxiloop"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textSize="6pt"
					android:textColor="#FFFFFF"
					android:text="Maxi Loop" />
				<EditText
					android:id="@+id/ed_maxiloop"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:textColor="#FFFFFF"
                    android:inputType="number"
					android:textSize="20sp"
					android:maxLength="5"
                    android:hint="@string/ex"
					android:textStyle="bold"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="6pt"
                    android:textColor="#FFFFFF"
                    android:text="Super Loop" />
                <EditText
                    android:id="@+id/ed_suploop"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"
					android:maxLength="5"
                    android:hint="@string/ex"
                    android:inputType="number"
                    android:textStyle="bold"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="6pt"
                    android:textColor="#FFFFFF"
                    android:text="Loop Holic" />
                <EditText
                    android:id="@+id/ed_loophol"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#FFFFFF"
					android:maxLength="5"
                    android:textSize="20sp"
                    android:inputType="number"
                    android:hint="@string/ex"
                    android:textStyle="bold"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="6pt"
                    android:textColor="#FFFFFF"
                    android:text="PDK 2GB" />
                <EditText
                    android:id="@+id/ed_pdk2gb"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#FFFFFF"
                    android:inputType="number"
                    android:textSize="20sp"
					android:maxLength="5"
                    android:hint="@string/ex"
                    android:textStyle="bold"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="6pt"
                    android:textColor="#FFFFFF"
                    android:text="PDK 4GB" />
                <EditText
                    android:id="@+id/ed_pdk4gb"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"
                    android:inputType="number"
					android:maxLength="5"
                    android:hint="@string/ex"
                    android:textStyle="bold"/>
				<TextView
					android:id="@+id/tx_circke40k"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textSize="6pt"
					android:layout_marginTop="15dp"
					android:textColor="#FFFFFF"
					android:text="Circle 40K" />
				<EditText
					android:id="@+id/ed_circle40K"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:textColor="#FFFFFF"
                    android:inputType="number"
					android:textSize="20sp"
					android:maxLength="5"
                    android:hint="@string/ex"
					android:textStyle="bold" />
				<TextView
					android:id="@+id/tx_circke70k"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textSize="6pt"
					android:textColor="#FFFFFF"
					android:text="Circle 70K" />
				<EditText
					android:id="@+id/ed_circle70K"
                    android:inputType="number"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:textColor="#FFFFFF"
					android:maxLength="5"
					android:textSize="20sp"
                    android:hint="@string/ex"
					android:textStyle="bold" />
				<TextView
					android:id="@+id/tx_member"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textSize="6pt"
					android:textColor="#FFFFFF"
					android:text="Member" />
				<EditText
					android:id="@+id/ed_member"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
                    android:inputType="number"
					android:textColor="#FFFFFF"
                    android:hint="@string/ex"
					android:maxLength="5"
					android:textSize="20sp"
					android:textStyle="bold" />
				<TextView
					android:id="@+id/tx_cug"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textSize="6pt"
					android:textColor="#FFFFFF"
					android:text="C U G" />
				<EditText
					android:id="@+id/ed_cug"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:textColor="#FFFFFF"
                    android:inputType="number"
                    android:hint="@string/ex"
					android:maxLength="5"
					android:textSize="20sp"
					android:textStyle="bold" />
				<TextView
					android:id="@+id/tx_nsp"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textSize="6pt"
					android:textColor="#FFFFFF"
					android:text="N S P" />
				<EditText
					android:id="@+id/ed_nsp"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:textColor="#FFFFFF"
					android:textSize="20sp"
                    android:inputType="number"
					android:maxLength="5"
                    android:hint="@string/ex"
					android:textStyle="bold" />

				<TextView
					android:id="@+id/tx_"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textSize="6pt"
					android:textColor="#FFFFFF"
					android:text="Other" />
				<EditText
					android:id="@+id/ed_other"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:textColor="#FFFFFF"
                    android:hint="@string/ex"
					android:textSize="20sp"
					android:maxLength="5"
                    android:inputType="number"
					android:textStyle="bold" />
			</LinearLayout>
		</LinearLayout>

      </ScrollView>
      <Button 
		android:id="@+id/bt_next2"
		android:background="@drawable/btn_hijau"
		android:textColor="#FFFFFF"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:textSize="20sp"
		android:layout_gravity="bottom"
		android:text="@string/next"/>
 </LinearLayout>