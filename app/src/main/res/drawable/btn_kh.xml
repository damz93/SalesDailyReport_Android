<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="#2980b9" />
            <corners android:radius="0dp" />
            <stroke android:width="2dp" android:color="#FFFFFF" />
            <padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient android:angle="90" android:endColor="#2c3e50" android:startColor="#2c3e50" />
            <stroke android:width="2dp" android:color="#d7ddf4" />
            <!--  -->
            <corners android:radius="0dp" />
            <padding android:bottom="0dp" android:left="10dp" android:right="10dp" android:top="10dp" />
        </shape>
    </item>
</selector>