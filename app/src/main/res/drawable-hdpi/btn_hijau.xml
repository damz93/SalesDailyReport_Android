<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
	<item android:state_pressed="true">
		<shape>
			<solid android:color="#2ecc71" />
			<corners android:radius="0dp" />
			<stroke android:width="2dp" android:color="#FFFFFF" />
			<padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp" />
		</shape>
	</item>
	<item>
		<shape>
			<gradient android:angle="90" android:endColor="#27ae60" android:startColor="#27ae60" />
			<stroke android:width="2dp" android:color="#edffe6" />
			<!--  -->
			<corners android:radius="0dp" />
			<padding android:bottom="0dp" android:left="10dp" android:right="10dp" android:top="10dp" />
		</shape>
	</item>
</selector>